@page "/ResetPassword"
@model Dashboard.API.Pages.ResetPasswordModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body > 
    <div class = "container-fluid bg-primary d-flex flex-column justify-content-center align-items-center p-5  text-center " style = " height: 100vh;">
  
        <h1 class = "display-1 text-white mb-5 "> Reset your password</h1>
        
         
    <form action="/api/User/resetpassword" method="post">
        <input type="hidden" name="Token" value="@Request.Query["Token"]" />
        <input type="hidden" name="Email" value="@Request.Query["Email"]" />
        <table class = "col-6 m-auto">
            <tr>
                <td>
                  <label for="NewPassword" class = "form-label text-white" > New Password</label> 
                </td>
                <td>
                    <input type="password" class="form-control " name="NewPassword" aria-describedby="passwordHelpBlock"/>
             <div id="passwordHelpBlock" class="form-text text-white">
  Your password must be at least 6 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
</div>
                </td>
            </tr>
            <tr>
                <td>
                  <label for="ConfirmPassword" class = "form-label text-white" >   Confirm Password</label>  
                </td>
                <td>
                 
                                <input type="password" class="form-control" name="ConfirmPassword" aria-describedby="passwordHelpBlock"/>
             <div id="passwordHelpBlock" class="form-text text-white">
  Your password must be at least 6 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
</div>
                </td>
            </tr>
            </table>
           
                
                    <input type="submit"  class="btn btn-success col-6 " value="Reset" />
                
           
        
    </form>
    
      </div>
</body>
</html>